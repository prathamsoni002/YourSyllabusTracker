<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".ReferencePage">

    <TextView
        android:id="@+id/logologin"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:text="YourSyllabusTracker"
        android:textColor="#FFFFFF"
        android:textSize="34dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chemistry"
        android:layout_width="200dp"
        android:layout_height="71dp"
        android:onClick="openChemistry"
        android:text="CHEMISTRY"
        android:textSize="20dp"
        android:background="?android:attr/selectableItemBackground"
        app:iconSize="36dp"
        app:layout_constraintBottom_toTopOf="@+id/physics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logologin" />

    <Button
        android:id="@+id/physics"
        android:layout_width="200dp"
        android:layout_height="71dp"
        android:onClick="openPhysics"
        android:text="PHYSICS"
        android:textSize="20dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/mathematics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chemistry" />

    <Button
        android:id="@+id/mathematics"
        android:layout_width="200dp"
        android:layout_height="71dp"
        android:onClick="openMathematics"
        android:text="MATHEMATICS"
        android:textSize="20dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/physics" />

    <ImageView
        android:id="@+id/referencebkgd"
        android:layout_width="446dp"
        android:layout_height="740dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613"
        app:srcCompat="@drawable/reference" />
    <!--        tools:layout_editor_absoluteX="271dp"-->
    <!--        tools:layout_editor_absoluteY="294dp" />-->


</androidx.constraintlayout.widget.ConstraintLayout>